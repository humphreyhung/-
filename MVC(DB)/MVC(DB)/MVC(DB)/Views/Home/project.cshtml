.main-container {
    background: linear-gradient(135deg, #718355 0%, #B5C99A 100%);
    padding: 6rem 2rem;
    margin: 4rem auto;
    max-width: 1200px;
    border-radius: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
}

.content-wrapper {
    display: flex;
    align-items: center;
    gap: 3rem;
    max-width: 1100px;
    margin: 2rem auto;
    padding-top: 2rem;
} 