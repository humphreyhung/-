@* @page *@

@* @model MVC_DB_.Views.Campaign.IndexModel *@
@* @{ *@
@* } *@

@model IEnumerable<MVC_DB_.Models.Campaign>

@{
    ViewData["Title"] = "募資專案列表";
}

<style>
    .container {
        padding: 2rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        width: 100%;
        max-width: 1400px;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 2rem;
        margin: 0 -2rem 2rem -2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .page-header h2 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary:hover {
        background-color: var(--hover-color);
        border-color: var(--hover-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(167, 201, 87, 0.2);
    }

    .table-responsive {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
        margin-top: 1rem;
        -webkit-overflow-scrolling: touch;
    }

    .table {
        margin-bottom: 0;
        min-width: 1000px;
    }

    .table thead {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        padding: 1.2rem;
        border: none;
        white-space: nowrap;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background-color: var(--bg-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    .table tbody td {
        padding: 1.2rem;
        vertical-align: middle;
        color: var(--text-color);
        font-size: 0.95rem;
        border-bottom: 1px solid var(--border-color);
        white-space: nowrap;
    }

    .table tbody td:nth-child(2) {
        white-space: normal;
        min-width: 200px;
        max-width: 300px;
    }

    .progress {
        height: 20px;
        background-color: #e9ecef;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        min-width: 150px;
    }

    .progress-bar {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        transition: width 0.6s ease;
    }

    .badge {
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 6px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
    }

    .btn-group {
        display: flex;
        gap: 0.5rem;
        flex-wrap: nowrap;
    }

    .btn-group .btn {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

    .btn-info {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        color: white;
    }

    .btn-info:hover {
        background-color: var(--hover-color);
        border-color: var(--hover-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(167, 201, 87, 0.2);
    }

    .btn-warning {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
    }

    .btn-warning:hover {
        background-color: var(--hover-color);
        border-color: var(--hover-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(170, 179, 134, 0.2);
    }

    .btn-danger {
        background-color: #f44336;
        border-color: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background-color: #e53935;
        border-color: #e53935;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(244, 67, 54, 0.2);
    }

    .alert-info {
        background-color: rgba(167, 201, 87, 0.1);
        border: none;
        color: var(--secondary-color);
        padding: 1.2rem;
        border-radius: 8px;
        font-size: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-top: 1rem;
    }

    .content-wrapper {
        padding-top: 2rem;
        padding-bottom: 2rem;
        width: 100%;
        overflow-x: hidden;
    }

    @@media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            margin: 0 -1rem 1.5rem -1rem;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .btn-primary {
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
        }

        .table thead th,
        .table tbody td {
            padding: 0.8rem;
            font-size: 0.9rem;
        }

        .btn-group .btn {
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
        }
    }
</style>

<div class="content-wrapper">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2>募資專案列表</h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> 新增專案
            </a>
        </div>
    </div>

    <div class="container">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                目前還沒有任何募資專案。點擊「新增專案」按鈕來創建第一個專案！
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>標題</th>
                            <th>描述</th>
                            <th>目標金額</th>
                            <th>已募金額</th>
                            <th>狀態</th>
                            <th>建立時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var campaign in Model)
                        {
                            <tr>
                                <td>@campaign.Title</td>
                                <td>@(campaign.Description?.Length > 50 ? campaign.Description.Substring(0, 47) + "..." : campaign.Description)</td>
                                <td>@campaign.TargetAmount.ToString("C")</td>
                                <td>
                                    <div class="progress">
                                        @{
                                            var percentage = campaign.TargetAmount > 0 
                                                ? (campaign.CollectedAmount / campaign.TargetAmount) * 100 
                                                : 0;
                                        }
                                        <div class="progress-bar" role="progressbar" 
                                             style="width: @Math.Min(percentage, 100)%;" 
                                             aria-valuenow="@percentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @campaign.CollectedAmount.ToString("C")
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-@(campaign.Status switch {
                                        "Draft" => "secondary",
                                        "Active" => "success",
                                        "Completed" => "primary",
                                        "Cancelled" => "danger",
                                        _ => "info"
                                    })">
                                        @campaign.Status
                                    </span>
                                </td>
                                <td>@campaign.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@campaign.Id" 
                                           class="btn btn-info">
                                            <i class="fas fa-info-circle me-1"></i> 詳情
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@campaign.Id" 
                                           class="btn btn-warning">
                                            <i class="fas fa-edit me-1"></i> 編輯
                                        </a>
                                        @if (campaign.Status == "Draft")
                                        {
                                            <a asp-action="Delete" asp-route-id="@campaign.Id" 
                                               class="btn btn-danger" 
                                               onclick="return confirm('確定要刪除這個專案嗎？');">
                                                <i class="fas fa-trash me-1"></i> 刪除
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
}

