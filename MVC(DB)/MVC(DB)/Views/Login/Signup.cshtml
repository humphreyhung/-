@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <style>
       

        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background-color: #f7f8f3;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* 幾何背景圖形 */
        .shape-circle {
            position: absolute;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background-color: #90a07c;
            top: -80px;
            left: -80px;
        }

        .shape-diamond {
            position: absolute;
            width: 200px;
            height: 200px;
            background-color: #4f5b2c;
            transform: rotate(45deg);
            top: 60px;
            right: -60px;
        }

        .shape-bottom-left {
            position: absolute;
            width: 300px;
            height: 300px;
            background-color: #f0f2ea;
            bottom: -80px;
            left: -80px;
            clip-path: polygon(0 0, 100% 100%, 0 100%);
        }

        .shape-bottom-right {
            position: absolute;
            width: 300px;
            height: 300px;
            background-color: #f5f5f0;
            bottom: -80px;
            right: -80px;
            clip-path: polygon(100% 0, 100% 100%, 0 100%);
        }

        .login-container {
            background-color: #f5ede3;
            border-radius: 20px;
            padding: 40px;
            width: 360px;
            max-width: 90vw;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            z-index: 10;
            position: relative;
            border: 1px solid #e0d6cc;
        }

            .login-container h2 {
                text-align: center;
                color: #4f5b2c;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-size: 15px;
            font-weight: 500;
            color: #3a3a3a;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 14px 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            background-color: #fff;
            box-sizing: border-box;
        }

        .login-btn {
            width: 100%;
            padding: 12px;
            background-color: #9e572a;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            margin-top: 10px;
            cursor: pointer;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            transition: background-color 0.3s;
        }

            .login-btn:hover {
                background-color: #7d3f1c;
            }

        .line-btn {
            width: 100%;
            padding: 12px;
            background-color: #06c755;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            margin-top: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .line-btn img {
                height: 20px;
                margin-right: 10px;
            }

        .signup {
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
            color: #4f5b2c;
        }
    </style>

</head>
<body>
    <!-- 幾何背景 -->
    <div class="shape-circle"></div>
    <div class="shape-diamond"></div>
    <div class="shape-bottom-left"></div>
    <div class="shape-bottom-right"></div>

    <!-- 登入表單 -->
    <div class="login-container">
        <h2>註冊</h2>
        <form method="post" action="/Login/Signupp">
        <div class="form-group">
            <label for="name">全名</label>
                <input type="text" id="name" name="name" placeholder="Type your name" maxlength="20" required />
        </div>
        
        <div class="form-group">
            <label for="username">帳號</label>
                <input type="text" id="username" name="username" placeholder="Type your username" maxlength="20" required />
        </div>
        <div class="form-group">
            <label for="password">密碼</label>
                <input type="password" id="password" name="password" placeholder="Type your password" maxlength="20" required />
        </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="Type your email" maxlength="40" required />
            </div>
        <button type="submit" class="login-btn">註冊</button>
        </form>

    </div>
</body>

<script>
    document.querySelector("form").addEventListener("submit", function (e) {
        const username = document.getElementById("username").value.trim();
        const password = document.getElementById("password").value.trim();
        const email = document.getElementById("email").value.trim();

        let errorMessages = [];

        // Username & Password 長度限制
        if (username.length < 8 || username.length > 20) {
            errorMessages.push("帳號需介於 8 至 20 個字元");
        }

        if (password.length < 8 || password.length > 20) {
            errorMessages.push("密碼需介於 8 至 20 個字元");
        }

        // Email 格式驗證
        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        if (!emailRegex.test(email)) {
            errorMessages.push("Email format is invalid.");
        }

        // 若有錯誤就中止送出，並顯示錯誤訊息
        if (errorMessages.length > 0) {
            e.preventDefault(); // 阻止表單送出
            alert(errorMessages.join("\n"));
        }
    });
</script>

</html>
