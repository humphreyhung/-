@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <style>
        
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background-color: #f7f8f3;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        label {
            font-size: 15px;
            font-weight: 500;
            margin-bottom: 6px;
            color: #3a3a3a;
        }

        /* 幾何背景圖形 - 改為和首頁相近色 */
        .shape-circle {
            position: absolute;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            background-color: #90a07c;
            top: -80px;
            left: -80px;
        }

        .shape-diamond {
            position: absolute;
            width: 200px;
            height: 200px;
            background-color: #4f5b2c;
            transform: rotate(45deg);
            top: 60px;
            right: -60px;
        }

        .shape-bottom-left {
            position: absolute;
            width: 300px;
            height: 300px;
            background-color: #f0f2ea;
            bottom: -80px;
            left: -80px;
            clip-path: polygon(0 0, 100% 100%, 0 100%);
        }

        .shape-bottom-right {
            position: absolute;
            width: 300px;
            height: 300px;
            background-color: #f5f5f0;
            bottom: -80px;
            right: -80px;
            clip-path: polygon(100% 0, 100% 100%, 0 100%);
        }

        .login-container {
            background-color: #f5ede3; /* 柔和奶茶色 */
            border: 1px solid #e0d6cc;
            border-radius: 20px;
            padding: 40px;
            width: 360px;
            max-width: 90vw;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            z-index: 10;
            position: relative;
        }

        .form-group {
            width: 100%;
            margin-bottom: 24px;
        }
            .login-container h2 {
                text-align: center;
                color: #4f5b2c;
                margin-bottom: 35px;
            }

        .login-container::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.6), rgba(255,255,255,0.3));
            border-radius: 20px;
            z-index: -1;
        }

        .login-container::after {
            content: "";
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 6px;
            background-color: #cbbfa3;
            border-radius: 3px;
        }


        input[type="text"],
        input[type="password"] {
            width: 92%;
            margin: 0 auto;
            display: block;
            padding: 14px 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            background-color: #fff;
            box-sizing: border-box;
        }

        .login-btn {
            width: 100%;
            padding: 12px;
            background-color: #9e572a; /* 深橘棕色，更穩重 */
            transition: background-color 0.3s;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            margin-top: 10px;
            cursor: pointer;
        }

            .login-btn:hover {
                background-color: #7d3f1c;
            }

        .signup {
            width: 100%;
            padding: 12px;
            background-color: #71803c;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            margin-top: 10px;
            cursor: pointer;
        }

            .signup:hover {
                background-color: #5c6a2f;
            }

        .line-btn {
            width: 100%;
            padding: 12px;
            background-color: #06c755;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            margin-top: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-btn {
            padding: 10px 15px;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .social-btn img {
                width: 24px;
                height: 24px;
                border-radius: 50%;
                background-color: white;
                padding: 2px;
            }

        .login-btn, .signup {
            margin-top: 16px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08); /* 微陰影讓白底更有層次 */
        }
    </style>
</head>
<body>
    <!-- 幾何背景 -->
    <div class="shape-circle"></div>
    <div class="shape-diamond"></div>
    <div class="shape-bottom-left"></div>
    <div class="shape-bottom-right"></div>

    <!-- 登入表單 -->
    <div class="login-container">
        <h2>登入</h2>
        <form method="post" action="/Login/login">
        <div class="form-group">
            <label for="username">帳號</label>
                <input type="text" id="username" name="username" placeholder="Type your username" maxlength="20" required />
        </div>
        <div class="form-group">
            <label for="password">密碼</label>
                <input type="password" id="password" name="password" placeholder="Type your password" maxlength="20" required />
        </div>
            <button type="submit" class="login-btn">登入</button>
        </form>
        <div style="text-align: center; margin: 20px 0 10px;">Or sign up using</div>

        <div style="display: flex; flex-direction: row; gap: 10px; margin-top: 20px; justify-content: center;">
            <!-- LINE -->
            <button class="social-btn" style="background-color: #06c755;">
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/41/LINE_logo.svg" alt="LINE" />
                LINE
            </button>

            <!-- Google -->
            <button class="social-btn" style="background-color: #db4437;">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" />
                Google
            </button>

            <!-- Facebook -->
            <button class="social-btn" style="background-color: #4267B2;">
                <img src="https://upload.wikimedia.org/wikipedia/commons/0/05/Facebook_Logo_%282019%29.png" alt="Facebook" />
                Facebook
            </button>
        </div>

        <form method="get" action="/Login/Signup">
            <input type="submit" class="signup" value="註冊" />
        </form>
    </div>
</body>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector("form");
        form.addEventListener("submit", function (e) {
            const username = document.getElementById("username").value.trim();
            const password = document.getElementById("password").value.trim();

            if (username.length < 8 || password.length < 8) {
                alert("帳號與密碼需至少 8 個字元");
                e.preventDefault(); // 阻止表單提交
            }
        });
    });
</script>


</html>
