@{
    ViewData["Title"] = "服務條款";
}

<div class="page-wrapper">
    <div class="terms-container">
        <div class="terms-header">
            <h1>服務條款</h1>
            <p class="last-updated">最後更新日期：@DateTime.Now.ToString("yyyy年MM月dd日")</p>
        </div>

        <div class="terms-content">
