@section Styles {
    <style>
        body {
            font-family: "微軟正黑體", sans-serif;
            background-color: #f7f7f0;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #bbbf93;
            display: flex;
            align-items: center;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 0;
            width: 1100px;
            z-index: 1000;
        }

        .logo {
            height: 90px;
            margin-right: 90px;
        }

        .sit-title {
            font-size: 35px;
            color: rgb(74, 72, 72);
            text-align: left;
            margin-left: 0;
            padding-left: 0;
        }

        .login-btn {
            margin-left: auto;
            border-radius: 5px;
            background-color: #d0d0c8;
            padding: 5px 10px;
        }

        /* 左專案列表 */
        .sidebar {
            width: 250px;
            background-color: #f0f5e9;
            padding: 30px;
            border-radius: 10px;
            height: fit-content;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }

        .sidebar h2 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin-bottom: 10px;
        }

        .sidebar a {
            text-decoration: none;
            color: #2a6b2a;
        }

        .sidebar a:hover {
            text-decoration: underline;
        }

        .content {
            display: flex;
            margin-top: 110px;
            padding: 20px;
            gap: 20px;
        }

        /* 右上列 */
        nav {
            margin-left: 50px;
            width: 770px;
            height: 30px;
            border-radius: 10px;
            background-color: #eae9dc;
            display: flex;
            align-items: center;
            padding: 10px;
            gap: 10px;
        }

        /* 右下內容 */
        main {
            display: flex;
            gap: 30px;
            padding: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .project {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
            padding-top: 20px;
            width: 350px;
        }

        /* 進度條 */
        .project progress {
            width: 100%;
            height: 18px;
        }

        progress::-webkit-progress-bar {
            background-color: #ffffff;
            border-radius: 10px;
        }

        progress::-webkit-progress-value {
            background-color: #547a54;
            border-radius: 10px;
        }

        /* 區塊點選 */
        .project-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .project-link:hover {
            opacity: 0.6;
        }

        /* 專案圖片 */
        .project img {
            width: 100%;
            border-radius: 8px;
        }

        /* 底下公告欄 */
        footer {
            width: 100%;
            background-color: #a8bfa0;
            padding: 10px;
            text-align: left;
        }

        .footer-row {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .social {
            text-align: right;
        }
    </style>
} 