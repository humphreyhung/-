@model MVC_DB_.Models.SponsorConfirmViewModel
@{
    ViewData["Title"] = "贊助確認";
}

<div class="container-fluid mt-5 px-5">
    <div class="row">
        <div class="col-12">
            <div class="card confirmation-card">
                <div class="card-header text-center">
                    <i class="fas fa-check-circle text-success mb-3" style="font-size: 3rem;"></i>
                    <h3 class="mb-0">贊助確認</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-section">
                                <h5><i class="fas fa-project-diagram me-2"></i>專案資訊</h5>
                                <div class="info-content">
                                    <p><strong>專案名稱：</strong> @Model.ProjectTitle</p>
                                    <p><strong>贊助金額：</strong> <span class="text-primary">NT$ @Model.Amount.ToString("N0")</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-section">
                                <h5><i class="fas fa-receipt me-2"></i>交易資訊</h5>
                                <div class="info-content">
                                    <p><strong>交易編號：</strong> <span class="text-primary">@Model.TransactionId</span></p>
                                    <p><strong>交易時間：</strong> @Model.TransactionTime.ToString("yyyy/MM/dd HH:mm:ss")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-section">
                                <h5><i class="fas fa-user me-2"></i>贊助者資訊</h5>
                                <div class="info-content">
                                    <p><strong>姓名：</strong> @Model.Name</p>
                                    <p><strong>電子郵件：</strong> @Model.Email</p>
                                    <p><strong>電話：</strong> @Model.Phone</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-section">
                                <h5><i class="fas fa-map-marker-alt me-2"></i>收件地址</h5>
                                <div class="info-content">
                                    <p><strong>縣市：</strong> @Model.City</p>
                                    <p><strong>鄉鎮市區：</strong> @Model.District</p>
                                    <p><strong>詳細地址：</strong> @Model.Address</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="info-section">
                                <h5><i class="fas fa-comment me-2"></i>備註</h5>
                                <div class="info-content">
                                    <p>@(string.IsNullOrEmpty(Model.Message) ? "無" : Model.Message)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="info-section">
                                <h5><i class="fas fa-credit-card me-2"></i>付款方式</h5>
                                <div class="info-content">
                                    <p>
                                        @switch (Model.PaymentMethod.ToLower())
                                        {
                                            case "credit":
                                                <text><i class="fas fa-credit-card me-2"></i>信用卡</text>
                                                break;
                                            case "atm":
                                                <text><i class="fas fa-university me-2"></i>ATM轉帳</text>
                                                break;
                                            case "line":
                                                <text><i class="fab fa-line me-2"></i>LINE Pay</text>
                                                break;
                                            default:
                                                <text>@Model.PaymentMethod</text>
                                                break;
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index_R", "Home")" class="btn btn-secondary me-2">
                            <i class="fas fa-home me-2"></i>返回首頁
                        </a>
                        <!-- 
                        <button type="button" class="btn btn-primary" onclick="window.print()">
                            <i class="fas fa-print me-2"></i>列印確認單
                        </button>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f7f7f0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .row {
        flex: 1;
        display: flex;
    }

    .col-12 {
        display: flex;
        flex-direction: column;
    }

    .confirmation-card {
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border: none;
        border-radius: 15px;
        margin: 0 auto;
        max-width: 1200px;
        width: 100%;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 2rem 1rem;
        border-radius: 15px 15px 0 0 !important;
    }

    .text-success {
        color: #6A994E !important;
    }

    .info-section {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 2rem;
        height: 100%;
        transition: all 0.3s ease;
        margin-bottom: 1rem;
    }

    .info-section:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    h5 {
        color: #6A994E;
        margin-bottom: 1.5rem;
        font-weight: 600;
        border-bottom: 2px solid #6A994E;
        padding-bottom: 0.8rem;
        font-size: 1.2rem;
    }

    .info-content {
        color: #666;
    }

    .info-content p {
        margin-bottom: 1rem;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .text-primary {
        color: #6A994E !important;
        font-weight: 600;
    }

    .btn {
        padding: 1rem 2rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .container-fluid {
            padding: 1rem;
        }

        .info-section {
            padding: 1.5rem;
        }

        .info-content p {
            font-size: 1rem;
        }

        .btn {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
        }
    }
</style>
