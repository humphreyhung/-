@model List<MVC_DB_.Controllers.AccountInfo>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "所有帳號資訊";
    var currentUser = Context.Session.GetString("username");
    var currentRole = Context.Session.GetString("role");
}
@section Styles {
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/bulma@1.0.4/css/bulma.min.css" />

    <link rel="stylesheet" href="https://unpkg.com/bulma-modal-fx/dist/css/modal-fx.min.css" />
</head>
<style>
    :root {
        --primary-color: #AAB386;
        --secondary-color: #A7C957;
        --hover-color: #6A994E;
        --bg-color: #f7f8f3;
        --text-color: #333;
        --border-color: #e0d6cc;
    }

    .content-wrapper {
        background-color: var(--bg-color);
        min-height: calc(100vh - 60px);
        
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .page-header h2 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
        margin-top: 1rem;
        padding: 1rem;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table thead {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
    }

    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        padding: 1.2rem;
        border: none;
        white-space: nowrap;
    }

    .table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid var(--border-color);
    }

    .table tbody tr:hover {
        background-color: var(--bg-color);
    }

    .table tbody td {
        padding: 1.2rem;
        vertical-align: middle;
        color: var(--text-color);
        font-size: 0.95rem;
    }

    .form-select {
        border: 1px solid var(--border-color);
        border-radius: 6px;
        padding: 0.6rem 1rem;
        font-size: 0.95rem;
        color: var(--text-color);
        background-color: #fff;
        transition: all 0.3s ease;
        min-width: 120px;
    }

    .form-select:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.2rem rgba(167, 201, 87, 0.15);
    }

    .btn {
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        font-size: 0.95rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: var(--secondary-color);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--hover-color);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(167, 201, 87, 0.2);
    }

    .btn-danger {
        background-color: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background-color: #e53935;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(244, 67, 54, 0.2);
    }

    .text-muted {
        color: #757575;
        font-size: 0.9rem;
        font-style: italic;
        padding: 0.5rem 1rem;
        background-color: var(--bg-color);
        border-radius: 4px;
        display: inline-block;
    }

    strong {
        color: var(--secondary-color);
        font-weight: 600;
        font-size: 1.1rem;
        padding: 0.3rem 0.8rem;
        background-color: rgba(167, 201, 87, 0.1);
        border-radius: 4px;
        display: inline-block;
    }

    .d-flex {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .me-2 {
        margin-right: 0.8rem;
    }

    .mt-1 {
        margin-top: 0.5rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    @@media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        .page-header {
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .page-header h2 {
            font-size: 1.5rem;
        }

        .table thead th,
        .table tbody td {
            padding: 0.8rem;
            font-size: 0.9rem;
        }

        .btn {
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
        }

        .table-responsive {
            padding: 0.5rem;
        }
    }
</style>
}
<div class="content-wrapper">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2>所有帳號資訊</h2>
        </div>
    </div>

    <div class="container">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>帳號</th>
                        <th>姓名</th>
                        <th>Email</th>
                        <th>角色</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td>@account.UserName</td>
                            <td>@account.Name</td>
                            <td>@account.Email</td>
                            <td>
                                <strong>@account.Role</strong>
                                <form method="post" asp-action="UpdateRole" class="d-flex mt-1">
                                    <input type="hidden" name="username" value="@account.UserName" />
                                    <select name="role" class="form-select me-2">
                                        <option value="User" selected="@(account.Role == "User" ? "selected" : null)">User</option>
                                        <option value="Admin" selected="@(account.Role == "Admin" ? "selected" : null)">Admin</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <form method="post" asp-action="UpdateRole" class="d-flex">
                                        <input type="hidden" name="username" value="@account.UserName" />
                                        <button type="submit" class="btn btn-primary">更新</button>
                                    </form>
                                    @if (account.UserName != currentUser)
                                    {
                                        <form method="post" asp-action="DeleteAccount" onsubmit="return confirm('確定要刪除此帳號嗎？')">
                                            <input type="hidden" name="username" value="@account.UserName" />
                                            <button type="submit" class="btn btn-danger">刪除</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">（目前使用者）</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
